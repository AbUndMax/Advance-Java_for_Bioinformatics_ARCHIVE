<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment06.window.WindowController">
   <children>
      <BorderPane layoutX="164.0" layoutY="84.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="W" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator></MenuItem>
                        <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open ...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator>
                        </MenuItem>
                      <MenuItem fx:id="clearMenuItem" mnemonicParsing="false" text="Clear View">
                          <accelerator>
                              <KeyCodeCombination alt="UP" code="X" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                          </accelerator>
                      </MenuItem>
                      <MenuItem fx:id="addAxesMenuItem" mnemonicParsing="false" text="Add Axes"/>
                      <MenuItem fx:id="rmAxesMenuItem" mnemonicParsing="false" text="Remove Axes"/>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem fx:id="resetMenuItem" mnemonicParsing="false" text="Reset">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="R" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator></MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="zoomInMenuItem" mnemonicParsing="false" text="Zoom In">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="PLUS" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator></MenuItem>
                        <MenuItem fx:id="zoomOutMenuItem" mnemonicParsing="false" text="Zoom Out">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="MINUS" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator></MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="rotateLeftMenuItem" mnemonicParsing="false" text="Rotate Left">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="LEFT" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator></MenuItem>
                        <MenuItem fx:id="rotateRightMenuItem" mnemonicParsing="false" text="Rotate Right">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="RIGHT" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator></MenuItem>
                        <MenuItem fx:id="rotateUpMenuItem" mnemonicParsing="false" text="Rotate Up">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="UP" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator></MenuItem>
                        <MenuItem fx:id="rotateDownMenuItem" mnemonicParsing="false" text="Rotate Down">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="DOWN" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                           </accelerator>
                        </MenuItem>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <BorderPane BorderPane.alignment="CENTER">
               <top>
                  <ToolBar BorderPane.alignment="CENTER">
                    <items>
                      <Button fx:id="resetButton" mnemonicParsing="false" text="Reset" />
                        <Separator orientation="VERTICAL" />
                        <Button fx:id="zoomInButton" mnemonicParsing="false" text="Zoom In" />
                        <Button fx:id="zoomOutButton" mnemonicParsing="false" text="Zoom Out" />
                        <Separator orientation="VERTICAL" />
                        <Button fx:id="rotateLeftButton" mnemonicParsing="false" text="Rotate Left" />
                        <Button fx:id="rotateRightButton" mnemonicParsing="false" text="Rotate Right" />
                        <Button fx:id="rotateUpButton" mnemonicParsing="false" text="Rotate Up" />
                        <Button fx:id="rotateDownButton" mnemonicParsing="false" text="Rotate Down" />
                        <Button fx:id="clearButton" mnemonicParsing="false" text="Clear View"/>
                    </items>
                  </ToolBar>
               </top>
                <bottom>
                    <ToolBar nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
                        <Button fx:id="closeButton" mnemonicParsing="false" text="Close" />
                    </ToolBar>
                </bottom>
               <center>
                  <Pane fx:id="threeDpane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
